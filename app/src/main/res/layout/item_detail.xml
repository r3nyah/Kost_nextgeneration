<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:backgroundTint="@color/lightblue"
    android:background="@color/lightblue"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/lightblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/border_image"
            android:text="image"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lines"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/image"
            android:layout_marginTop="10dp"
            android:text="-"
            android:background="@color/darkblue"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lines"
            android:text="Nama"
            android:textColor="@color/darkblue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama"
            android:text="alamat"
            android:textColor="@color/darkblue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alamat"
            android:text="desc"
            android:textColor="@color/darkblue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Detail"
            android:textColor="@color/darkgray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gender"
            android:textColor="@color/darkblue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail"
            android:text="Gender Restriction" />

        <TextView
            android:id="@+id/bedroom"
            android:layout_width="150dp"
            android:textColor="@color/darkblue"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:text="Availabe bedrooms" />

        <TextView
            android:id="@+id/bedroomtotal"
            android:textColor="@color/darkblue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bedroom"
            android:text="Total bedrooms" />

        <TextView
            android:id="@+id/price"
            android:textColor="@color/darkblue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bedroomtotal"
            android:text="Price" />

        <TextView
            android:id="@+id/genderbaru"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail"
            android:textColor="@color/darkblue2"
            android:layout_toRightOf="@id/gender"
            android:text="umu" />

        <TextView
            android:id="@+id/availabe"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue2"
            android:layout_below="@id/genderbaru"
            android:layout_toRightOf="@id/gender"
            android:text="umu" />

        <TextView
            android:id="@+id/totalbedroom"
            android:layout_width="150dp"
            android:textColor="@color/darkblue2"
            android:layout_height="wrap_content"
            android:layout_below="@id/availabe"
            android:layout_toRightOf="@id/gender"
            android:text="umu" />

        <TextView
            android:id="@+id/pricetag"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/totalbedroom"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/gender"
            android:text="umu"
            android:textColor="@color/darkblue2" />








    </RelativeLayout>



</LinearLayout>